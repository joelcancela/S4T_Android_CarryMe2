<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.va407031iutniceunicefr.carryme2.MainActivity"
    android:weightSum="1"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/vol"
        android:id="@+id/volume"
        android:layout_gravity="left|center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_row="0"
        android:layout_column="1" />

    <ImageView
        android:layout_width="51dp"
        android:layout_height="54dp"
        android:id="@+id/imageView"
        android:contentDescription="@string/volstatus"
        android:maxHeight="@dimen/dimVolume"
        android:maxWidth="@dimen/dimVolume"
        android:minHeight="@dimen/dimVolume"
        android:minWidth="@dimen/dimVolume"
        android:scaleType="centerCrop"
        android:src="@drawable/notmuted"
        android:layout_row="1"
        android:layout_column="0" />

    <SeekBar
        android:layout_width="@dimen/seekbarSize"
        android:layout_height="wrap_content"
        android:id="@+id/volumebar"
        android:max="100"
        android:progress="@integer/defaultSeekbar"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="left|center_horizontal"
        android:indeterminate="false"
        android:paddingTop="25dp" />

</GridLayout>